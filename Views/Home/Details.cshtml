@model HomeDetailsViewModel

@{
    ViewBag.Title = "User Details";
    var photoPath = "~/Images/" + (Model.User.PhotoPath ?? "noimage.jpg");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.User.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top" src="@photoPath" asp-append-version="true" />

                <h4>user ID : @Model.User.Id</h4>
                <h4>Email : @Model.User.Email</h4>
                <h4>Location : @Model.User.Location</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" 
                   class="btn btn-primary">Back</a>
                <a asp-action="edit" asp-controller="home"
                asp-route-id="@Model.User.Id"
              class="btn btn-primary">Edit</a>
                <a asp-controller="home" asp-action="index" 
                   class="btn btn-primary">Delete</a>
            </div>
        </div>
    </div>
</div>